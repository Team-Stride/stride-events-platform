# Stride Events Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Stride Events Platform"
ENVIRONMENT=development
DEBUG=False
API_V1_PREFIX=/api/v1

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/stride_events

# =============================================================================
# Multi-tenancy
# =============================================================================
TENANT_ID=stride-ahead

# =============================================================================
# JWT Authentication
# =============================================================================
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Stride ID API Integration
# =============================================================================
STRIDE_ID_API_URL=https://api.strideahead.in/v1
STRIDE_ID_API_KEY=your-stride-id-api-key

# =============================================================================
# SendGrid Email Service
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@strideahead.in
SENDGRID_FROM_NAME=Stride Ahead

# =============================================================================
# CORS Settings
# =============================================================================
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# =============================================================================
# Payment Gateway Settings
# =============================================================================
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable
PAYMENT_WEBHOOK_SECRET=your_webhook_secret
PAYMENT_GATEWAY=razorpay

# =============================================================================
# WhatsApp (Karix) Settings
# =============================================================================
KARIX_API_URL=https://api.karix.io/v2
KARIX_API_KEY=your-karix-api-key
KARIX_SENDER_NUMBER=+919876543210

# =============================================================================
# Frontend URLs
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REGISTRATION=True
ENABLE_PAYMENTS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_WHATSAPP_NOTIFICATIONS=True
